{
  "compilerOptions": {
    // ... existing options ...
    "jsx": "react",
    "module": "commonjs",
    "target": "es2016",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,

    // Add these for module resolution
    "baseUrl": ".", // This sets your base directory for non-relative imports
    "paths": {
      "@/*": ["src/*"] // Adjust the path as per your project structure
    }
  }
}
